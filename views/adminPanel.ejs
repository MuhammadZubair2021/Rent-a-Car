              <div class="col-md-12 col-lg-12 col-sm-12">
                <h3 class="text-secondary"><%= customer.fullName %> Reservations
                  <a href="#" class="btn btn-primary ml-2" 
                  onclick="toggleCustomerReservations('<%= index %>',this)">Let's View</a>       
                </h3>
              </div>
