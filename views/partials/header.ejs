                </nav>
                            
                <div class="container mt-3 text-center userMessage">                  
                  
                    <% if(error && error.length > 0){ %>
                    <div class="alert alert-danger row"  role="alert">
                      <h4 class="col-md-9 userMessageText">
                          <%= error %>                        
                      </h4>
                        <button type="button" class="close col-md-3" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true" class="btn btn-danger p-2 userMessageBtn">CLEAR</span></button>
                    </div>
                    <%}%>    
                    <% if(success && success.length > 0){ %>
                    <div class="alert alert-success row" role="alert">
                      <h4 class="col-md-9 userMessageText">
                          <%= success %>
                      </h4>
                        <button type="button" class="close col-md-3" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true" class="btn btn-danger p-2 userMessageBtn">CLEAR</span></button>
