    <link rel="icon" type="image/x-icon" href="../../public/images/favicons/rentACarLogo.jpg">
    <style>
      div.userMessage{
        margin: 0;
        position: relative;
        top: -15px;
        height: 60%;
        width: 50%;
        border-top-left-radius: 10rem;
        transition: all 1s;
        left: 67%;
        border-bottom-left-radius: 10rem;
        padding: 2% 0;
        animation-name: pullRight;
        animation-duration: 2s;
      }
      @keyframes pullRight {
        0%{
          left: 200%;
        }
        100%{
          left:67%;
        }
      }
      div.alert{        
        border-top-left-radius: 10rem;        
        border-bottom-left-radius: 10rem;        
      }
      button.closeUserMessage{
        font-size: 3rem;
        margin-right: -7%;
        margin-top: -2%;
      }
        .show{     
      transform: scale(1);     
    } 

    .hide{      
        transform: scale(0);               
    }
    
      /* Modal will come above/over other elements on clicking a button */
      div.formModal {               
        position: fixed;        
        z-index: 1;
        background-color: rgba(0, 0, 0, 0.9);        
        overflow: auto;
        width: 100%;
        height: 100vh;
        margin-top: -7%;
        transition:all 1s;     
      }

      /* A button to close modal */
    span.closeModal{
      font-size: 200%;
      font-weight: 900;
      cursor: pointer;
      }
    div#underConstructionDiv{
      position: fixed;
      z-index: 1;
      width: 100%;
    }
    </style>
    </head>
    
